<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#50000000" />
            <stroke
                android:width="3dp"
                android:color="@color/text" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item >
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/text" />
            <corners
                android:radius="6dp" />
            <padding
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>